<% provide(:title, @publisher.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Name: <%= @publisher.name %>
      </h1>
      <p>Address: <%= @publisher.address %></p>
      <span>&emsp;&emsp;&emsp;<%= @publisher.content unless @publisher.content.nil? %></span>
    </section>
  </aside>
  <div class="col-md-8">
    	<% if @publisher.books.any? %>
      		<h3>Books (<%= @publisher.books.count %>)</h3>
      		<ol class="books">
        		<%= render @books %>
      		</ol>
      		<%= will_paginate @books %>
    	<% end %>
  	</div>
</div>