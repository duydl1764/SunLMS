<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    <div class="col-md-8">
    <% if @user.comments.any? %>
      <h3><%= t(:text_comment) %> (<%= @user.comments.count %>)</h3>
      <ol class="comments">
        <% @comments.each do |comment| %>
          <li id="comment-<%= comment.id %>">
            <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
            <span class="user"><%= link_to comment.user.name, comment.user %>
              đã bình luận về <%= link_to comment.book.name, comment.book %>
            </span>
            <span class="content"><%= comment.content %></span>
            <span class="timestamp">
              Posted <%= time_ago_in_words(comment.created_at) %> ago.
            </span>
          </li>
        <% end %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>
</div>
