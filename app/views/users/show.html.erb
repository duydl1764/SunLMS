<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    <%= render "follow_form" if logged_in?  %>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <section class="stats">
      <%= render "shared/stats_user_author" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Micropost Feed</h3>
    <%= render "shared/feed" %>
  </div>
</div>
