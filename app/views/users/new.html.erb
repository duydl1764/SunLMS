<% provide(:title, t("users.new.name_page")) %>
<% provide(:button_name, t("users.new.text_button")) %>
<h1><%= t("users.new.name_page") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control"%>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= hidden_field_tag :role, 0 %>
      <%= hidden_field_tag :content, "" %>

      <%= f.submit yield(:button_name), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
