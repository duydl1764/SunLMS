<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= link_to @user.name, @user %></h1>
      <span><b><%= t(:text_comment) %>:</b> <%= @user.comments.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @authors.any? %>
      <ul class="authors follow">
        <%= render @authors %>
      </ul>
    <% end %>
  </div>
</div>
