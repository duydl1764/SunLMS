<% provide(:title, t("sessions.new.name_page")) %>
<h1><%= t("sessions.new.name_page") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("sessions.new.text_remember") %></span>
      <% end %>

      <%= f.submit t("sessions.new.text_button"), class: "btn btn-primary" %>
    <% end %>

    <p>You don't have account. <%= link_to t("static_pages.home.text_signup"), signup_path %></p>
  </div>
</div>
