<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.text_logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.header.text_home"), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.text_user"), users_path %></li>
          <li><%= link_to t("layouts.header.text_book"), books_path %></li>
          <li><%= link_to t("layouts.header.text_author"), authors_path %></li>
          <li><%= link_to t("layouts.header.text_category"), categories_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to t("layouts.header.text_publisher"), publishers_path %></li>
          <% end %>
          <li><%= link_to t("layouts.header.text_borrow"), show_borrow_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t("layouts.header.text_account") %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
            <li><%= link_to t("layouts.header.text_profile"), current_user %></li>
            <li><%= link_to t("layouts.header.text_setting"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to t("layouts.header.text_logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.text_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
