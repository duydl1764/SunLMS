<% provide(:title, @author.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="author_info">
      <h1><%= t("authors.show.text_name") %> <%= @author.name %></h1>
      <span>(<%= @author.nickname %>)</span>
      <span>&emsp;&emsp;&emsp;<%= @author.content if @author.content.present? %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @author.books.any? %>
      <h3><%= t("layouts.header.text_book") %> (<%= @author.books.count %>)</h3>
      <ol class="books"><%= render @books %></ol>
      <%= will_paginate @books %>
    <% end %>
  </div>
</div>
