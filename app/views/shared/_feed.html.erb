<% if @feed_items.any? %>
  <ol class="comments">
    <% @feed_items.each do |comment| %>
      <li id="comment-<%= comment.id %>">
        <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
        <span class="user"><%= link_to comment.user.name, comment.user %>
          đã bình luận về <%= link_to comment.book.name, comment.book %>
        </span>
        <span class="content"><%= comment.content %></span>
        <span class="timestamp">
          <%= t(:text_comment) %> <%= time_ago_in_words(comment.created_at) %> ago.
          <% if current_user?(comment.user) %>
            <%= link_to t(:text_delete), comment, method: :delete %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ol>
  <%= will_paginate @feed_items %>
<% end %>
