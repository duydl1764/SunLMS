<li>
  <%= image_tag("book.jpg", alt: "Book", size: "60x60", class: "left") %>
  <%= link_to book.name, book, class: "left" %>
  <% if current_user.admin? %>
    <%= link_to t(:text_delete), book, method: :delete, class: "btn btn-outline-primary right" %>
    <%= link_to t(:text_edit), edit_book_path(book), class: "btn btn-outline-primary right" %>
  <% end %>
</li>
