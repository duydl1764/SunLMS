<%= form_for(@book) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :status %>
  <%= f.text_field :status %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :pages %>
  <%= f.number_field :pages, min: 0, step: :any, class: "form-control" %>

  <%= f.label :number_of %>
  <%= f.number_field :number_of, min: 0, step: :any, class: "form-control" %>

  <%= f.label :author %>
  <%= f.select "author_id", Author.all.collect{   |a| [a.name, a.id]
  }, { prompt: "Select Author "}, class: "form-control" %>

  <%= f.label :category %>
  <%= f.select "category_id", Category.all.collect{|a| [a.name, a.id]}, { prompt: "Select Category "}, class: "form-control" %>

  <%= f.label :publisher %>
  <%= f.select "publisher_id", Publisher.all.collect{ |a| [a.name, a.id] }, { prompt: "Select Publisher "}, class: "form-control" %>

  <%= f.submit yield(:button_name), class: "btn btn-primary" %>
<% end %>
